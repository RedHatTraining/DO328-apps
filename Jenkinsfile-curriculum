pipeline {
    agent {
        label 'master'
    }


    environment {
        HOME = '${WORKSPACE}'
        NPM_CONFIG_CACHE = '${WORKSPACE}/.npm'
        CI = 'true'
    }

    stages {

        stage('Install') {

            agent {
                docker {
                    image 'node:14'
                }
            }

            steps {
                dir('adopt-a-pup/web-app') {
                    sh 'npm ci'
                }
            }

        }

        stage('Test') {

            agent {
                docker {
                    image 'node:14'
                }
            }

            steps {
                dir('adopt-a-pup/web-app') {
                    sh 'npm run lint'
                    sh 'npm test'
                }
            }

        }

        stage('Build & Push') {
            
            steps {
                scriptÂ {
                    docker.withRegistry('https://quay.io/', 'rht_jenkins_quay') {
                        sh './scripts/build_image_v1'
                        sh './scripts/build_image_v2'
                        sh 'docker push quay.io/redhattraining/ossm-adopt-a-pup-webapp'
                    }
                }
            }

        }

    }
}
