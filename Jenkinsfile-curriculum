pipeline {
    agent {
        label 'master'
    }

    dir("adopt-a-pup/web-app")

    stages {

        stage("Install") {

            agent {
                docker {
                    image 'node:14'
                }
            }

            steps {
                echo "Branch is ${env.BRANCH_NAME}..."
                sh 'npm ci'
            }
        }

    }
}
